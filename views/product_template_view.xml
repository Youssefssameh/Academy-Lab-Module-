<odoo>
    <record id="view_product_template_form_inherit_academy_course" model="ir.ui.view">
        <field name="name">product.template.form.inherit.academy.course</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tooltip']" position="after">
                <field name="course_id" readonly='1'/>
            </xpath>
        </field>
    </record>
</odoo>
