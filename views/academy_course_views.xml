<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_academy_course_list" model="ir.ui.view">
        <field name="name">academy.course.list</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <list
                decoration-info="state == 'draft'"
                decoration-primary="state == 'published'"
                decoration-warning="state == 'in_progress'"
                decoration-success="state == 'done'"
                decoration-danger="state == 'cancelled' or is_full"
            >
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="instructor_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="max_students"/>
                <field name="enrolled_count"/>
                <field name="available_seats"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_academy_course_search" model="ir.ui.view">
        <field name="name">academy.course.search</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="instructor_id"/>

                <filter name="f_published" string="Published" domain="[('state','=','published')]"/>
                <filter name="f_in_progress" string="In Progress" domain="[('state','=','in_progress')]"/>
                <filter name="f_done" string="Done" domain="[('state','=','done')]"/>
                <filter name="f_full" string="Full" domain="[('is_full','=',True)]"/>

                <group expand="0" string="Group By">
                    <filter name="g_category" string="Category" context="{'group_by':'category_id'}"/>
                    <filter name="g_instructor" string="Instructor" context="{'group_by':'instructor_id'}"/>
                    <filter name="g_state" string="State" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_academy_course_form" model="ir.ui.view">
        <field name="name">academy.course.form</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <header>
                    <button name="%(product_wizard_action)d"
                        type="action"
                        string="Generate Product"
                        class="btn-primary"
                        context="{'default_name': name}" />


                    <button name="action_publish"
                            type="object"
                            string="Publish"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_start"
                            type="object"
                            string="Start"
                            class="btn-primary"
                            invisible="state != 'published'"/>

                    <button name="action_complete"
                            type="object"
                            string="Complete"
                            class="btn-primary"
                            invisible="state != 'in_progress'"/>

                    <button name="action_cancel"
                            type="object"
                            string="Cancel"
                            class="btn-secondary"
                            invisible="state in ('done','cancelled')"/>

                    <field name="state"
                        widget="statusbar"
                        statusbar_visible="draft,published,in_progress,done,cancelled"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action"
                                name="%(academy_lab.action_academy_enrollments_by_course)d"
                                class="oe_stat_button"
                                icon="fa-users">
                            <field name="enrolled_count" widget="statinfo" string="Enrollments"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="instructor_id"/>
                            <field name="product_ids" readonly="1"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration_hours"/>
                            <field name="max_students"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="enrolled_count" readonly="1"/>
                            <field name="available_seats" readonly="1"/>
                            <field name="is_full" readonly="1"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>


    <record id="view_academy_course_kanban" model="ir.ui.view">
        <field name="name">academy.course.kanban</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                
                <field name="name"/>
                <field name="code"/>
                <field name="state"/>
                <field name="category_id"/>
                <field name="instructor_id"/>
                <field name="available_seats"/>
                <field name="is_full"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_header">
                                <strong class="o_kanban_title">
                                    <field name="name"/>
                                </strong>
                                <span class="badge bg-secondary float-end">
                                    <field name="code"/>
                                </span>
                            </div>

                            
                            <div class="text-muted mt8">
                                <i class="fa fa-tag me-1"/>
                                <field name="category_id"/>
                            </div>

                            <div class="text-muted mt4">
                                <i class="fa fa-user me-1"/>
                                <field name="instructor_id"/>
                            </div>

                            
                            <div class="mt8">
                                <span class="text-muted">Seats:</span>
                                <span class="fw-bold">
                                    <field name="available_seats"/>
                                </span>
                                <t t-if="record.is_full.raw_value">
                                    <span class="badge bg-danger ms-2">Full</span>
                                </t>
                                <t t-else="">
                                    <span class="badge bg-success ms-2">Available</span>
                                </t>
                            </div>

                            
                            <div class="mt8">
                                <field name="state" widget="badge"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
