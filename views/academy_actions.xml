<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="action_academy_courses" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">academy.course</field>
        <field name="view_mode">list,form,kanban</field>
    </record>


    <record id="action_academy_course_categories" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">academy.course.category</field>
        <field name="view_mode">list,form</field>
    </record>


    <record id="action_academy_enrollments_by_course" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">academy.enrollment</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('course_id', '=', active_id)]</field>
        <field name="context">{'default_course_id': active_id}</field>
    </record>


    <record id="action_academy_enrollment_all" model="ir.actions.act_window">
        <field name="name">All Enrollments</field>
        <field name="res_model">academy.enrollment</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>


    <record id="action_academy_enrollment_my" model="ir.actions.act_window">
        <field name="name">My Enrollments</field>
        <field name="res_model">academy.enrollment</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('student_id.user_ids', 'in', [uid])]</field>
        <field name="context">{'search_default_my_enrollments': 1}</field>
    </record>

        <record id="product_wizard_action" model="ir.actions.act_window">
        <field name="name">Generate Product</field>
        <field name="res_model">academy.product.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>
