<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <record id="view_academy_enrollment_list" model="ir.ui.view">
        <field name="name">academy.enrollment.list</field>
        <field name="model">academy.enrollment</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'completed'"
                decoration-warning="state == 'confirmed'"
                decoration-danger="state == 'cancelled'">
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="enrollment_date"/>
                <field name="state"/>
                <field name="grade"/>
                <field name="attendance_percentage"/>
                <field name="passed"/>
            </list>
        </field>
    </record>

    
    <record id="view_academy_enrollment_search" model="ir.ui.view">
        <field name="name">academy.enrollment.search</field>
        <field name="model">academy.enrollment</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="state"/>

                <filter name="my_enrollments"
                        string="My Enrollments"
                        domain="[('student_id.user_ids', 'in', [uid])]"/>

                <filter name="confirmed"
                        string="Confirmed"
                        domain="[('state', '=', 'confirmed')]"/>

                <filter name="completed"
                        string="Completed"
                        domain="[('state', '=', 'completed')]"/>

                <group expand="0" string="Group By">
                    <filter string="Course" name="group_by_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Student" name="group_by_student" context="{'group_by': 'student_id'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>


<record id="view_academy_enrollment_form_instructor_readonly" model="ir.ui.view">
    <field name="name">academy.enrollment.form.instructor.readonly</field>
    <field name="model">academy.enrollment</field>
    <field name="priority">50</field>
    <field name="groups_id" eval="[(4, ref('academy_lab.academy_group_instructor'))]"/>
    <field name="arch" type="xml">
        <form string="Enrollment" edit="false" create="false" delete="false">
            <header>
                <field name="state"
                    widget="statusbar"
                    statusbar_visible="draft,confirmed,completed,cancelled"/>
            </header>

            <sheet>
                <group>
                    <group>
                        <field name="student_id"/>
                        <field name="course_id"/>
                        <field name="enrollment_date"/>
                    </group>

                    <group>
                        <field name="grade"/>
                        <field name="attendance_percentage"/>
                        <field name="passed" readonly="1"/>
                    </group>
                </group>

                <notebook>
                    <page string="Notes">
                        <field name="notes"/>
                    </page>
                </notebook>
            </sheet>

            <chatter/>
        </form>
    </field>
</record>


    
    <record id="view_academy_enrollment_form" model="ir.ui.view">
        <field name="name">academy.enrollment.form</field>
        <field name="model">academy.enrollment</field>
        <field name="arch" type="xml">
            <form string="Enrollment">
                <header>
                    <field name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirmed,completed,cancelled"/>

                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_complete"
                            string="Complete"
                            type="object"
                            class="btn-secondary"
                            invisible="state != 'confirmed'"/>

                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            class="btn-secondary"
                            invisible="state in ('cancelled','completed')"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="student_id" required="1"/>
                            <field name="course_id" required="1"/>
                            <field name="enrollment_date"/>
                        </group>

                        <group>
                            <field name="grade"/>
                            <field name="attendance_percentage"/>
                            <field name="passed" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

</odoo>
