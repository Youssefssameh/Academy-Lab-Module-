<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_course_certificate" model="ir.actions.report">
        <field name="name">Course Certificate</field>
        <field name="model">academy.enrollment</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">academy_lab.report_course_certificate</field>
        <field name="report_file">academy_lab.report_course_certificate</field>
        <field name="print_report_name">'Certificate - %s' % (object.student_name or object.display_name)</field>
        <field name="binding_model_id" ref="academy_lab.model_academy_enrollment"/>
        <field name="binding_type">report</field>
    </record>


    <record id="action_report_course_enrollment" model="ir.actions.report">
        <field name="name">Course Enrollments</field>
        <field name="model">academy.course</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">academy_lab.report_course_enrollment</field>
        <field name="report_file">academy_lab.report_course_enrollment</field>
        <field name="print_report_name">'Enrollments report for - %s' % (object.name or object.display_name)</field>
        <field name="binding_model_id" ref="academy_lab.model_academy_course"/>
        <field name="binding_type">report</field>
    </record>


    <record id="report_enrollment_by_filters" model="ir.actions.report">
        <field name="name">Enrollment Report (Date Filter)</field>
        <field name="model">academy.enrollment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">academy_lab.enrollment_report_template</field>
        <field name="report_file">academy_lab.enrollment_report_template</field>
        <field name="print_report_name">'Enrollment_Report_%s' % (object.course_id.name or '')</field>
    </record>


    <record id="report_student_transcript" model="ir.actions.report">
        <field name="name">Student Transcript</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">academy_lab.student_transcript_template</field>
        <field name="report_file">academy_lab.student_transcript_template</field>
        <field name="print_report_name">'Transcript_%s' % (object.name)</field>
    </record>


    <record id="action_enrollment_xlsx_report" model="ir.actions.report">
        <field name="name">Enrollment XLSX</field>
        <field name="model">academy.enrollment</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">academy_lab.enrollment_xlsx_report</field>
        <field name="report_file">enrollment_report</field>
        <field name="binding_model_id" ref="model_academy_enrollment"/>
        <field name="binding_type">report</field>
    </record>


</odoo>
