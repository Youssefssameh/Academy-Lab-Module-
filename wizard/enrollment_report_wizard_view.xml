<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="enrollment_report_wizard_form" model="ir.ui.view">
        <field name="name">academy.enrollment.report.wizard.form</field>
        <field name="model">academy.enrollment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Enrollment Report (Date Filter)">
                <group>
                    <field name="course_id" readonly="1"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="student_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </group>

                <footer>
                    <button string="Print" type="object" name="generate_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_enrollment_report_wizard" model="ir.actions.act_window">
        <field name="name">Enrollment Report (Date Filter)</field>
        <field name="res_model">academy.enrollment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="enrollment_report_wizard_form"/>
        <field name="target">new</field>

        <field name="context">{'default_course_id': active_id}</field>
    </record>

</odoo>
